<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <ImageView
       android:layout_width="match_parent"
       android:layout_height="50dp"
       android:id="@+id/img"
       android:scaleType="fitXY"
       android:src="@drawable/banner_7up"></ImageView>

    <androidx.appcompat.widget.Toolbar
        android:layout_below="@+id/img"
        android:id="@+id/toolbar"
        android:background="@color/colorpr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_quaylai"/>

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"

            android:text="Lê Việt Long"
            android:textSize="20dp"
            android:paddingStart="10dp"

            android:padding="5dp"
            android:drawablePadding="10dp"
            android:textColor="#000000"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/ic_shoppingcart"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/ic_abc"/>
    </androidx.appcompat.widget.Toolbar>
    <com.google.android.material.tabs.TabLayout

        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tablayout"></com.google.android.material.tabs.TabLayout>
    <GridView

        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tablayout"
        android:layout_marginTop="8dp"
        android:horizontalSpacing="1dp"
        android:numColumns="2"
        android:verticalSpacing="1dp" />



</RelativeLayout>